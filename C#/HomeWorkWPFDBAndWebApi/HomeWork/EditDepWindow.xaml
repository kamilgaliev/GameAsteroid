<Window x:Class="HomeWork.EditDepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork"
        mc:Ignorable="d"
        Title="EditDepWindow" Height="450" Width="360.5" Loaded="Window_Loaded">
    <Grid x:Name="DepGrid" Margin="0,0,3.2,0">
        <TextBox x:Name="DepName" HorizontalAlignment="Left" Height="35" Margin="50,47,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="252"/>
        <Button x:Name="BtnSave" Content="Изменить" HorizontalAlignment="Left" Margin="160,200,0,0" VerticalAlignment="Top" Width="75" Click="BtnSave_Click"/>
        <Button x:Name="Cancel" Content="Отмена" HorizontalAlignment="Left" Margin="160,288,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>
    </Grid>
</Window>
