<Window x:Class="HomeWork.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork"
        mc:Ignorable="d"
        Title="EditWindow" Height="450" Width="800">
    <Grid x:Name="EditGrid">
        <TextBox x:Name="EmplName" 
                 HorizontalAlignment="Left" Height="35" Margin="50,47,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="252"/>
        <TextBox x:Name="EmplAge" HorizontalAlignment="Left" Height="35" Margin="50,100,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="252" />
        <Button x:Name="SaveBTN" Content="Сохранить" HorizontalAlignment="Left" Margin="117,254,0,0" VerticalAlignment="Top" Width="75" Click="SaveBTN_Click"/>
        <ComboBox x:Name="DepBox" HorizontalAlignment="Left" Margin="50,165,0,0" VerticalAlignment="Top" Width="252" Height="34">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

    </Grid>
</Window>
