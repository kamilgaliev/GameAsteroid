<Window x:Class="HomeWork.AddEmpl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork"
        mc:Ignorable="d"
        Title="AddEmpl" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="NewEmplName" HorizontalAlignment="Left" Height="23" Margin="10,61,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="NewEmplAge" HorizontalAlignment="Left" Height="23" Margin="208,61,0,0" TextWrapping="Wrap" Text="18" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtnSave" Content="Сохранить" HorizontalAlignment="Left" Margin="253,167,0,0" VerticalAlignment="Top" Width="75" Click="BtnSave_Click"/>
        <ComboBox x:Name="DeptBox" HorizontalAlignment="Left" Margin="538,61,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
